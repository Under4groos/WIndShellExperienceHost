<UserControl x:Class="WIndShellExperienceHost.View.Controls.SegoeFluentIcons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WIndShellExperienceHost.View.Controls"
             mc:Ignorable="d" 
             Height="45" Width="45">

    <Border Style="{DynamicResource border_hover_button}"  CornerRadius="4">
        <Label x:Name="_label" HorizontalContentAlignment="Center" 
               VerticalAlignment="Center" FontSize="16" Margin="0" Padding="0"
               FontFamily="Segoe Fluent Icons" Foreground="#ffffff" />
    </Border>
</UserControl>
