<Window xmlns:View="clr-namespace:WIndShellExperienceHost.View"  x:Class="WIndShellExperienceHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WIndShellExperienceHost"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        AllowsTransparency="True"
        WindowStyle="None"
        ShowInTaskbar="False"
        Background="{DynamicResource window_back}"
        Topmost="True"
        AllowDrop="True"
        DragDrop.Drop="Window_Drop"
        
        >
     
    <Window.Style>
        <Style TargetType="{x:Type Window}">
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome CaptionHeight="20"
                                CornerRadius="16"
                              GlassFrameThickness="0"
                              NonClientFrameEdges="None"
                              ResizeBorderThickness="5"
                              UseAeroCaptionButtons="True" />
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>


    <Border CornerRadius="7" BorderThickness="1"  BorderBrush="{DynamicResource border}">
        <Grid>
            <ScrollViewer Margin="0,0,0,62" VerticalScrollBarVisibility="Hidden">
                <WrapPanel x:Name="_wrappanel" Margin="5">

                </WrapPanel>
            </ScrollViewer>
            <Border MinHeight="60" VerticalAlignment="Bottom" Background="{DynamicResource border_down}">

            </Border>
        </Grid>
    </Border>
</Window>
